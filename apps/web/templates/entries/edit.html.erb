<form id="edit-entry-<%= entry.id %>" method="post" action="<%= Web::Routes.url(:entry, id: entry.id) %>">
  <input type="hidden" name="_method" value="patch" />

  <p>
    <label for="title">Title</label>
    <input type="text" name="entry[title]" value="<%= entry.title %>" placeholder="Title" required>
  </p>
  <p>
    <label for="description">Description</label>
    <textarea name="entry[description]" placeholder="Description"><%= entry.description %></textarea>
  </p>

  <p class="buttons">
    <button type="submit">Update</button> or <a href="<%= Web::Routes.url(:entries) %>">Back</a>
  </p>
</form>
